<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" 
        android:color="@color/buttonOrangeColor">
    <shape android:shape="rectangle"  >
      <corners android:radius="0dip" />
      <stroke android:width="1dip" android:color="@color/buttonOrangeColor" />
    </shape>
  </item>
  <item android:state_focused="true"
        android:color="@color/buttonOrangeColor">
    <shape android:shape="rectangle"  >
      <corners android:radius="0dip" />
      <stroke android:width="1dip" android:color="@color/buttonOrangeColor" />
      <solid android:color="@color/buttonOrangeColor"/>
    </shape>
  </item>
  <item android:color="@color/buttonOrangeColor">
    <shape android:shape="rectangle"  >
      <corners android:radius="0dip" />
      <solid android:color="@color/buttonOrangeColor"/>
    </shape>
  </item>
</selector>